<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> রেজিস্ট্রেশন
        </h1>
        <% include ./partials/messages %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">ব্যবহারকারীর নাম</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="নাম লিখুন"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">পাসওয়ার্ড</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="নতুন পাসওয়ার্ড লিখুন"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">সু্নিশ্চিত পাসওয়ার্ড</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="সু্নিশ্চিত পাসওয়ার্ড লিখুন"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            রেজিস্ট্রেশন করুন
          </button>
        </form>
        <p class="lead mt-4">
          একাউন্ট খোলা আছে? <a href="/users/login">লগইন</a>
        </p>
      </div>
    </div>
  </div>
</div>
